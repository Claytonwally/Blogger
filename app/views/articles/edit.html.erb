<div class="row" style="padding-top:10%;">
	<div class="col"></div>
	<div class = "col-md-7">

<h1>Edit an Article!</h1>
<%= form_for @article do |f| %>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title, class:'form-control' %>
	</p>
	<p>
		<%= f.label :text %>
		<%= f.text_area :text, class:'form-control' %>
	</p>
	<p>
	   <%= f.submit  class: 'btn bnt-lg btn-primary'%>
	</p>

<% end %>

</div><!--close div of col-md-7 -->
<div class="col"></div>
</div><!-- close div tag for row -->
